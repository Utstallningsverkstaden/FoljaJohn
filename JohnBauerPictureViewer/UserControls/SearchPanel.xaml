<UserControl
    x:Class="JohnBauerPictureViewer.UserControls.SearchPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JohnBauerPictureViewer.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="#90000000">
        <Grid Background="White" Margin="100">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10">
                <Button Name="CloseButton" Content="Close" Click="CloseButton_Click"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                    <Button Content="Clear filter" Name="ClearFilterButton" Click="ClearFilterButton_Click"/>
                    <TextBlock Name="Filter" Text="-no filter-" VerticalAlignment="Center" Margin="20,0,0,0"/>
                </StackPanel>
                <StackPanel Name="CategoryPanel">
                    
                </StackPanel>
                <StackPanel Name="ResultPanel"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
