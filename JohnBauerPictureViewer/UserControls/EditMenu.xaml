<UserControl
    x:Class="JohnBauerPictureViewer.UserControls.EditMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JohnBauerPictureViewer.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="400">

    <Grid Background="#90000000">
        <Grid Background="White" Margin="100">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10">
                <Button Content="Load data from csv-file" Name="LoadDataButton" Click="LoadDataButton_Click"/>
                <Button Name="SaveButton" Content="Save data to json file" Click="SaveButton_Click"/>
                <Button Name="CloseButton" Content="Close" Click="CloseButton_Click"/>
            </StackPanel>
            <TextBlock Name="OutputText" Margin="10,150,10,10" TextWrapping="Wrap" />
        </Grid>

    </Grid>
</UserControl>
